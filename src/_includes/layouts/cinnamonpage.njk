---
layout: layouts/base.njk
backgroundimage: /img/background/cinnamonbackground2.jpg
navbarcolor: rgb(240, 240, 240)
navlogo: emojicats
comments: true
---
<main>

{% set comictitle = "/img/logo/cinnamontitle.png" %}
{% set pagelist = collections.cinnamon %}


<!-- Title -->
{% include "components/comictitle.njk" %}


<!-- Comic Page -->
<img class="comicpage" src="/img/{{ title }}/{{ chapter }}-{{ pagenumber }}.jpg"/>
<div class="container">


<!-- Comic Nav -->
{% include "components/comicsnav.njk" %}


<!-- Journal -->
<div class="mangapage" style="grid-template-columns: 1fr 5fr;" >
<div class="mangahalftone"></div>
<div class="mangacontent mangapaper">
<h1>{{ title }} {{chapter}}.{{ pagenumber }}</h1>
<p class="datedisplay"> <small>{{ date }}</small> </p>
{{ content | safe }}
</div>
</div>


<!-- Disqus Comments -->
{% include "components/disquscomments.njk" %}
</main>
