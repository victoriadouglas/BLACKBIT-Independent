---
layout: layouts/base.njk
---
<main>
<div class="container">
{% if thumbnail %}
<img style="max-width: 100%" src="{{ thumbnail }}"/>
{% endif %}
<h1 style="margin-bottom:0; margin-top:20vh;">{{ title }}</h1>
<p style="margin:0 0 30px;"><small>{{ description }}</small></p>
<p style="margin:0 0 30px;"><small>{{ date }}</small></p>
<hr>

{{ content | safe }}
<a class="button" href="{{ '/posts/' | url }}">Back</a>
</div>

</main>
